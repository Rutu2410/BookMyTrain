<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="3dp" >

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:padding="8dp"
android:gravity="center_vertical">

<TextView
    android:id="@+id/passengerNumberTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Nb: "
    android:textColor="@color/white"
    android:textSize="18sp" />

<TextView
    android:id="@+id/passengerNameTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Name: "
    android:textSize="18sp"
    android:textColor="@color/white"
    android:layout_marginEnd="8dp"/>

<TextView
    android:id="@+id/passengerGenderTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Gender: "
    android:textColor="@color/white"
    android:textSize="18sp"
    android:layout_marginEnd="8dp"/>

<TextView
    android:id="@+id/passengerAgeTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Age:"
    android:textColor="@color/white"
    android:textSize="18sp"
    android:layout_weight="1"
    android:layout_marginEnd="10dp"/>
    <TextView
        android:id="@+id/passengerSeatTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/b7"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="seate">

    </TextView>

</LinearLayout>

</LinearLayout>