<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:backgroundTint="@color/b5"
    android:background="@android:color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Booking Details"
            android:gravity="center"
            android:foregroundTint="@color/white"
            android:foregroundGravity="center"
            android:background="@color/b3"
            app:titleTextColor="@color/white" />

        <!-- Date Selection RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/dateRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:orientation="horizontal"
            android:paddingBottom="8dp" />

        <!-- Train Details CardView -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            android:backgroundTint="@color/b3"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/trainNameTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Express Train"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/trainNumberTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Express Train"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="6dp"
                        android:contentDescription="Train Icon"
                        android:src="@drawable/baseline_directions_transit_24" />
                </LinearLayout>

                <!-- Train Number, Date & Duration -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">


                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="4dp"
                    android:background="@android:color/darker_gray"/>

                <!-- Departure & Arrival -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/departureStationTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="New York"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/departureTimeTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="08:30 AM"
                            android:textColor="@color/b7"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="6dp"
                        android:text="→"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/arrivalStationTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Washington"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/arrivalTimeTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="02:15 PM"
                            android:textColor="@color/b7"
                            android:textSize="14sp"/>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/durationTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5h 45m"
                    android:layout_gravity="center"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <!-- Seat Availability Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="3"
            android:paddingVertical="8dp">

            <!-- Sleeper Section -->
            <androidx.cardview.widget.CardView
                android:id="@+id/sleeperCardView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:backgroundTintMode="@color/b3"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/sleeperTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sleeper"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/sleeperPriceTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text=" ₹0"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/sleeperSeatsTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Available"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_green_dark" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Second Sitting Section -->
            <androidx.cardview.widget.CardView
                android:id="@+id/secondSeatingCardView"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:backgroundTintMode="@color/b3"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="122dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/secondSeatingTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Second Sitting"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/secondSeatingPriceTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="₹0"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/secondSeatingSeatsTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Available"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_green_dark" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- AC Section -->
            <androidx.cardview.widget.CardView
                android:id="@+id/acCardView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:backgroundTintMode="@color/b3"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/acTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AC"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/acPriceTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="₹0"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/acSeatsTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Available"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_green_dark" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <Button
            android:id="@+id/addPassengerButton"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="ADD PASSENGER"
            android:layout_marginTop="15dp"
            android:textSize="17dp"
            android:textStyle="bold"
            android:drawable="@drawable/baseline_add_24"
            app:cornerRadius="20px"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/b2"/>

        <!-- Passenger RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/passengerRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:nestedScrollingEnabled="false"
            android:paddingVertical="8dp" />



            <Button
                android:id="@+id/proceedButton"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="10dp"
                android:textSize="17dp"
                android:textStyle="bold"
                android:drawable="@drawable/baseline_add_24"
                app:cornerRadius="20px"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/b9"
                android:text="Proceed" />

    </LinearLayout>
</ScrollView>
