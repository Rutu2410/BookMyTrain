<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="2dp">

    <TextView
        android:id="@+id/timeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:gravity="center_vertical"
        android:layout_marginEnd="4dp"/>

    <LinearLayout
        android:layout_width="22dp"
        android:layout_height="84dp"
        android:layout_marginEnd="4dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bigDot"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/baseline_brightness_1_24" />

        <!-- Line (Now expands fully) -->
        <View
            android:layout_width="7dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="6"
            android:background="#E1E0E54D" />
    </LinearLayout>

    <!-- Station Details -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/stationNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Station Name"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/stationCodeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STN"
            android:textSize="12sp"
            android:textColor="#E1E0E54D"/>
    </LinearLayout>
</LinearLayout>
