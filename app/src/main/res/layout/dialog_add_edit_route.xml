<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/b5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Train Selection -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            android:padding="12dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/b3"
                android:orientation="vertical">

                <AutoCompleteTextView
                    android:id="@+id/autoCompleteTrain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select Train"
                    android:textColorHint="@color/white"
                    android:textColor="@color/white"
                    android:drawableEnd="@android:drawable/ic_menu_more"
                    android:padding="10dp" />

                <AutoCompleteTextView
                    android:id="@+id/autoCompleteDepartureStation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select Departure Station"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:drawableEnd="@android:drawable/ic_menu_more"
                    android:padding="10dp" />

                <AutoCompleteTextView
                    android:id="@+id/autoCompleteArrivalStation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select Arrival Station"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:drawableEnd="@android:drawable/ic_menu_more"
                    android:padding="10dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Time Selection -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            android:padding="12dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnSelectDepartureTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select Departure Time"
                    app:cornerRadius="10dp"
                    android:backgroundTint="@color/b2"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="8dp"/>

                <Button
                    android:id="@+id/btnSelectArrivalTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select Arrival Time"
                    app:cornerRadius="10dp"
                    android:backgroundTint="@color/b2"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Duration Display -->
        <TextView
            android:id="@+id/tvDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Duration: "
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            android:textColor="@android:color/holo_blue_dark"/>

        <!-- Pricing Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            android:padding="12dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/b3"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/etPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:hint="Enter General Price"
                    android:textColor="@color/white"
                    android:inputType="numberDecimal"
                    android:minHeight="48dp"
                    android:padding="10dp"
                    android:textColorHint="@color/white" />

                <EditText
                    android:id="@+id/etSleeperPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/white"
                    android:hint="Enter Sleeper Price"
                    android:inputType="numberDecimal"
                    android:padding="10dp"
                    android:textColorHint="@color/white"
                    tools:ignore="TouchTargetSizeCheck" />

                <EditText
                    android:id="@+id/etAcPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/white"
                    android:hint="Enter AC Price"
                    android:inputType="numberDecimal"
                    android:minHeight="48dp"
                    android:padding="10dp"
                    android:textColorHint="@color/white" />

                <EditText
                    android:id="@+id/etSecondSeatingPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Second Seating Price"
                    android:inputType="numberDecimal"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Submit Button -->
        <Button
            android:id="@+id/btnSaveRoute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:backgroundTint="@color/b9"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:cornerRadius="10dp"
            android:padding="12dp"
            android:layout_marginTop="12dp"/>

    </LinearLayout>

</ScrollView>
